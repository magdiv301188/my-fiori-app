<mvc:View
    controllerName="resource.controller.detailsteps.StepService"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form">

<VBox id="step4" class="sapUiMediumMargin">

    <Title id="step4Title" text="Step 4: Service Details" level="H4"/>

    <f:SimpleForm id="frmServiceDetails" layout="ResponsiveGridLayout">

        <Label id="lblStartDate" text="Start Date"/>
        <DatePicker id="dpStartDate" value="{create>/startDate}"/>

        <Label id="lblEndDate" text="End Date"/>
        <DatePicker id="dpEndDate" value="{create>/endDate}"/>

        <Label id="lblStatus" text="Status"/>
        <Select id="selStatus" selectedKey="{create>/status}">
            <core:Item id="itemActive" key="Active" text="Active"/>
            <core:Item id="itemInactive" key="Inactive" text="Inactive"/>
        </Select>

    </f:SimpleForm>

    <Toolbar id="tbServiceActions" class="sapUiSmallMarginTop" width="100%">
        <ToolbarSpacer id="tbServiceSpacer"/>
        <Button id="btnSaveService"
            text="Save"
            type="Emphasized"
            press="onSaveService"/>
    </Toolbar>

</VBox>

</mvc:View>
